@model FrontEnd.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutIdentity.cshtml";

}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<!DOCTYPE html>
<html>

<head>

    <title>Login</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="styles.css">

</head>


<!------ AQUI INICIA EL LOGIN ---------->

<body>
    <div>
    </div>
    <center>
        <img src="~/img/Logo3.jpg" width="200" height="150">
    </center>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card bg-danger text-white" style="width: 25rem">
                <div class="card-header">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h3>Inicio de Sesión</h3>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end social_icon">
                        <span><i class="fab fa-facebook-square"></i></span>
                        <span><i class="fab fa-google-plus-square"></i></span>
                        <span><i class="fab fa-twitter-square"></i></span>
                    </div>
                </div>

                <div class="card-body">
                    <form asp-action="Login">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="Contraseña" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row align-items-md-center remember">
                            <div class="col-md-10">
                                <div style="text-align: right;width:85px">
                                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                                </div>

                                <div class="form-group">
                                    <center>
                                        <div style="text-align: right;width:165px">

                                            <input type="submit" value="Ingresar" class="btn-primary login_btn" style="height: 30%" />

                                        </div>
                                    </center>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
    .btn-primary {
        color: #FCFCFF;
        background-color: #004aad;
        border-color: #1313A8;
    }

    .card-header {
        color: #FCFCFF;
        background-color: #463f57;
        border-color: #463f57;
    }

    .card-body {
        color: #FCFCFF;
        background-color: #463f57;
        border-color: #463f57;
    }

    .input-group-text {
        color: #FCFCFF;
        background-color: #004aad;
        border-color: #1313A8;
    }

    .input-group-prepend {
        margin-left: 15%
    }

    .submit {
        margin-left: 20%
    }
</style>
