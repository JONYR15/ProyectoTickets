@{
    string IndexPriority = Url.Action("Index", "Priority");
    string IndexStatus = Url.Action("Index", "Status");
    string IndexDepartment = Url.Action("Index", "Department");
    string IndexIncident = Url.Action("Index", "Incident");
    string AgregarUsuario = Url.Action("Register", "Account");
}
<div class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar" style="background:#004aad">
    <div class="sidebar-brand d-flex align-items-center justify-content-center">
        <a href="/" class="sidebar-brand-text mx-3 text-white text-decoration-none">
            <img src="~/img/logo3.png" style="height:75px; width:100px" />
            <br />
        </a>
    </div>

    <hr class="sidebar-divider">
    <div class="sidebar-heading" style="color:white">

        MANTENIMIENTO
    </div>


    <li class="nav-item">
        <a class="nav-link collapsed" href="@IndexIncident">
            <i class="fas fa-archive"></i>
            <span>Incidentes</span>
        </a>
    </li>

    @if (User.IsInRole("Administrador"))
    {
            <li class="nav-item">
                <a class="nav-link collapsed" href="@IndexDepartment">
                    <i class="fas fa-person-booth"></i>
                    <span>Departamentos</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="@IndexPriority">
                    <i class="fas fa-fw fa-clipboard-list"></i>
                    <span>Prioridades</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="@IndexStatus">
                    <i class="fas fa-address-book"></i>
                    <span>Estatus</span>
                </a>
            </li>

        
            <li class="nav-item">
                <a class="nav-link collapsed" href="@IndexDepartment">
                    <i class="fas fa-utensils"></i>
                    <span>Cliente</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="@AgregarUsuario">
                    <i class="fas fa-user"></i>
                    <span>Registar Usuario</span>
                </a>
            </li>
    }
    <hr class="sidebar-divider d-none d-md-block">

    <div class="text-center d-none d-md-inline">
        <button class="rounded-circle border-0" id="sidebarToggle"></button>
    </div>
</div>
