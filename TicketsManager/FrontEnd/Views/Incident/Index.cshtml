
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string URLAgregar = Url.Action("Create", "Incident");
    string URLActualizar = Url.Action("Edit", "Incident");
    string URLSesiones = Url.Action("Index", "Sesion");
}

<div class="container">
    <nav>
        <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-creados-tab" data-toggle="tab" href="#nav-creados" role="tab" aria-controls="nav-creado" aria-selected="true">
                CREADOS
            </a>
            <a class="nav-item nav-link" id="nav-asignados-tab" data-toggle="tab" href="#nav-asignados" role="tab" aria-controls="nav-asignados" aria-selected="false">
                ASIGNADOS
            </a>
            <a class="nav-item nav-link" id="nav-revision-tab" data-toggle="tab" href="#nav-revision" role="tab" aria-controls="nav-revision" aria-selected="false">
                @* CUANDO YA TIENE UNA SESIÓN CREADA en revision*@
                EN REVISIÓN
            </a>
